<PropertyList>

    <model>
        <name>ropeorigin</name>
        <path>[addon=org.flightgear.addons.CGTOW]Models/long-line-uc.xml</path>
    </model>

    <animation>
        <type>translate</type>
        <object-name>ropeorigin</object-name>
        <property>sim/gui/dialogs/rope-dialog/settings/x-pos</property>
        <factor>1</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>ropeorigin</object-name>
        <property>sim/gui/dialogs/rope-dialog/settings/y-pos</property>
        <factor>1</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>ropeorigin</object-name>
        <property>sim/gui/dialogs/rope-dialog/settings/z-pos</property>
        <factor>1</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

	<animation>
		<type>scale</type>
		<object-name>ropeorigin</object-name>
        <property>/sim/gui/dialogs/rope-dialog/settings/size</property>
        <factor>1</factor>
        <!--x-offset>0.7</x-offset>
        <y-offset>0.7</y-offset-->
        <z-offset>0.0</z-offset>
        <!--center>
          <x-m>-1.22448</x-m>
          <y-m>-1.32749</y-m>
          <z-m>0.99333</z-m>
        </center-->
	</animation>

</PropertyList>