                    var p = "sim/gui/dialogs/aicargo-dialog/connection";
                    setprop(p, var i = 0);
                    gui.popupTip("Cargo connection " ~ (i ? "Long Line" : "Hard Docked"));
                    setprop("sim/cargo/cargo_connection_flag_0",1);
                    setprop("sim/cargo/cargo_connection_flag_1",0);
